<%- include('includes/header') %>
<div class="modal fade" id="confirm" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          ...
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
 
    <main class="flex-shrink-0">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="mt-5">
                        <%= title %>
                    </h1>
                </div>
                <div class="col-auto float-end">
                    <a href="/users/add" class="btn btn-primary btn-express mt-5" role="button">Add User</a>
                </div>
            </div>
            <!-- <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#confirm">
                Launch demo modal
              </button> -->
            <div class="table-data">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>Address</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>

                    <% if(userData.length!=0){ var i=1; userData.forEach(function(data){ %>
                        <tr>
                            <td>
                                <%=data.id %>
                            </td>
                            <td>
                                <%=data.name %>
                            </td>
                            <td>
                                <%=data.email %>
                            </td>
                            <td>
                                <%=data.password %>
                            </td>
                            <td>
                                <%=data.address %>
                            </td>
                            <td><a href="/users/edit/<%=data.id%>">Edit</a></td>
                            <!-- <td><a href="/users/delete/<%=data.id%>">Delete</a></td> -->
                            <td><a href="#" onclick="confirmDelete('<%= data.id %>','<%= data.name %>')">Delete</a></td>
                            
                        </tr>
                        <% i++; }) %>
                            <% } else{ %>
                                <tr>
                                    <td colspan="7">No Data Found</td>
                                </tr>
                                <% } %>
                </table>
            </div>
        </div>
    </main>

    <%- include('includes/footer') %>
    <script>

function confirmDelete(id, name) {
  if (confirm("Are you sure you want to delete the user: "+name)) {
    window.location.href="/users/delete/"+id;
  }
}
    </script>
        </body>

        </html>