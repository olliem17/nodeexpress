<%- include('partials/header') %>

    <main class="flex-shrink-0">
        <div class="container">
            <div class="row">
                <div class="col">
                    <h1 class="mt-5">
                        <%= title %>
                    </h1>
                </div>
                <div class="col-auto float-end">
                    <a href="/users/add" class="btn btn-primary btn-express mt-5" role="button">Add User</a>
                </div>
            </div>

            <div class="table-data">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Password</th>
                            <th>Address</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>

                    <% if(userData.length!=0){ var i=1; userData.forEach(function(data){ %>
                        <tr>
                            <td>
                                <%=data.id %>
                            </td>
                            <td>
                                <%=data.name %>
                            </td>
                            <td>
                                <%=data.email %>
                            </td>
                            <td>
                                <%=data.password %>
                            </td>
                            <td>
                                <%=data.address %>
                            </td>
                            <td><a href="/users/edit/<%=data.id%>">Edit</a></td>
                            <td><a href="/users/delete/<%=data.id%>">Delete</a></td>
                        </tr>
                        <% i++; }) %>
                            <% } else{ %>
                                <tr>
                                    <td colspan="7">No Data Found</td>
                                </tr>
                                <% } %>
                </table>
            </div>
        </div>
    </main>

    <%- include('partials/footer') %>
        </body>

        </html>